@*----- Blazor WebAssembly -----*@
<h3>Convert Inch to/from Centimeter - Two-Way Binding</h3>
<label>Inches </label>
<input type="number" 
       @bind-value="@Inches" 
       @bind-value:event="oninput" />
<span> = </span>
<input type="number" 
       @bind-value="@Centimeters" 
       @bind-value:event="oninput" />
<label> Centimeters</label>

@code {
    double inches = 1.00; // default value
    double centimeters = 2.54; // default value

    double Inches {
        get => inches;
        set {
            centimeters = value * 2.54;
            inches = value;
        }
    }

    double Centimeters {
        get => centimeters;
        set {
            inches = value / 2.54;
            centimeters = value;
        }
    }
}